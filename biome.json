{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"include": ["src/**/*.js", "src/**/*.css", "src/**/*.html"],
		"ignore": ["src/.vite/**/*.js", "src/vite.config.js.timestamp*"]
	}
}
